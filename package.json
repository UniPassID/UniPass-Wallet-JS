{
  "name": "unipass-wallet.js",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "pnpm run -r clean",
    "build": "pnpm run hardhat:compile && pnpm run -r build",
    "test": "pnpm run test:concurrently 'pnpm run hardhat:compile && sleep 3 && pnpm run -r test'",
    "test:concurrently": "pnpm concurrently -k --success first 'pnpm run hardhat:start > /dev/null'",
    "lint": "eslint --ext js,ts,tsx .",
    "hardhat:start": "pnpm hardhat node --port 7547",
    "hardhat:compile": "pnpm hardhat compile",
    "publish": "pnpm run hardhat:compile && pnpm publish -r",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm run hardhat:compile && pnpm publish -r && pnpm changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@nighttrax/eslint-config-tsx": "~10.0.0-beta.2",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@types/node": "^18.7.5",
    "doctoc": "~2.2.0",
    "eslint": "~8.20.0",
    "eslint-plugin-import": "~2.26.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.4",
    "unipass-wallet-contracts": "github:UniPassID/Unipass-Wallet-Contract#v0.0.9"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react-scripts": "^5.0.0"
      }
    }
  },
  "dependencies": {
    "concurrently": "^7.3.0"
  }
}
